    "start-hardhat": "hardhat node",
    "deploy-contracts": "hardhat run scripts/deployEnhancedDeSci.js --network localhost",
    "demo-scenario": "hardhat run scripts/fullTestScenario.js --network localhost",
    "demo-core": "hardhat run scripts/coreOperationsDemo.js --network localhost",
