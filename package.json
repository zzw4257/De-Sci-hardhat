{
  "name": "desci-platform",
  "version": "1.0.0",
  "description": "Decentralized Science Platform with smart contracts and frontend",
  "main": "index.js",
  "scripts": {
    "test": "hardhat test",
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.js",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
